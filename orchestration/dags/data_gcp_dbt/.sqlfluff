[sqlfluff]
dialect = bigquery
templater = dbt
runaway_limit = 10
max_line_length = 0
rules= JJ01
; exclude_rules = references.qualification,AM06
processes = 1
large_file_skip_byte_limit = 25000
ignore_templated_areas = True

[sqlfluff:templater:jinja]
apply_dbt_builtins = True
load_macros_from_path = ./macros, ./target/dbt_packages/dbt_utils/macros,./target/dbt_packages/dbt_date/macros,./target/dbt_packages/dbt_airflow_macros/macros

[sqlfluff:templater:jinja:macros]
ds = {% macro ds() %} current_date().strftime("%Y-%m-%d") {% endmacro %}

[sqlfluff:templater:dbt]
apply_dbt_builtins = True
project_dir = ./
profiles_dir = ./
profile = data_gcp_dbt
target = dev

[sqlfluff:templater:dbt:context]
ENV_SHORT_NAME = "dev"
; [sqlfluff:templater:jinja:context]
; target= {"profile_name": "data_gcp_dbt","name": "dev"}
; incremental_strategy='insert_overwrite'
; partition_by={'field': 'event_date', 'data_type': 'date'}
; on_schema_change='ignore'

[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = lower

[sqlfluff:rules:capitalisation.functions]
capitalisation_policy = lower

[sqlfluff:rules:capitalisation.identifiers]
capitalisation_policy = lower

[sqlfluff:layout:type:comma]
spacing_before = touch
line_position = trailing

[sqlfluff:layout:type:end_of_file]
spacing_before = touch


[sqlfluff:layout:type:comment]
spacing_before = 1
spacing_after = 1

[sqlfluff:layout:type:template_loop]
spacing_before = any
spacing_after = any

[sqlfluff:rules:structure.join_condition_order]
preferred_first_table_in_join_clause = earlier

[sqlfluff:rules:aliasing.table]
aliasing = explicit

[sqlfluff:rules:ambiguous.column_references]  # Number in group by
group_by_and_order_by_style = implicit


[sqlfluff:templater]
unwrap_wrapped_queries = True
apply_dbt_builtins = True

[sqlfluff:indentation]
indent_unit = space
indented_ctes = False
indented_joins = True
indented_using_on = True
indented_on_contents = True
tab_space_size = 4
template_blocks_indent = True
